/* =========================
   PHASE 1 — HERO RESET
   ========================= */

.hero-dark {
  position: relative;
  min-height: 90vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rem 2rem;
  background: #020617;
  overflow: hidden;
}

/* Main glow */
.hero-dark::before {
  content: "";
  position: absolute;
  width: 800px;
  height: 800px;
  background: radial-gradient(circle, rgba(99,102,241,0.28), transparent 60%);
  top: -30%;
  left: 50%;
  transform: translateX(-50%);
  filter: blur(160px);
  pointer-events: none;
}

/* Secondary glow */
.hero-dark::after {
  content: "";
  position: absolute;
  width: 600px;
  height: 600px;
  background: radial-gradient(circle, rgba(56,189,248,0.18), transparent 60%);
  bottom: -30%;
  right: -15%;
  filter: blur(160px);
  pointer-events: none;
}

.hero-glass {
  position: relative;
  z-index: 2;
  max-width: 880px;
  width: 100%;
  padding: 5rem 4rem;
  border-radius: 28px;
