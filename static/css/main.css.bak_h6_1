:root {
  --bg: #f8fafc;
  --text: #0f172a;
  --muted: #64748b;
  --card: #ffffff;
  --border: #e5e7eb;
  --primary: #4f46e5;
}

body {
  margin: 0;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
  background: var(--bg);
  color: var(--text);
}

.hero {
  min-height: 85vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 4rem 1rem;
  background: radial-gradient(circle at top, #eef2ff, transparent 60%);
}

.hero-glass {
  max-width: 720px;
}

.hero h1 {
  font-size: 3rem;
  letter-spacing: -0.03em;
}

.hero-subtitle {
  font-size: 1.2rem;
  color: var(--muted);
  margin-top: 1rem;
}

.hero-actions {
  margin-top: 2rem;
  display: flex;
  gap: 1rem;
  justify-content: center;
}

.btn {
  padding: 0.75rem 1.25rem;
  border-radius: 10px;
  text-decoration: none;
  border: 1px solid var(--border);
  font-weight: 600;
}

.btn-primary {
  background: var(--primary);
  color: white;
  border: none;
}

.btn-secondary {
  background: white;
  color: var(--text);
}

.features {
  padding: 5rem 2rem;
  max-width: 1100px;
  margin: 0 auto;
}

.features h2 {
  font-size: 2.2rem;
  text-align: center;
}

.features-subtitle {
  text-align: center;
  color: var(--muted);
  margin-bottom: 3rem;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 1.5rem;
}

.feature-card {
  background: var(--card);
  padding: 1.5rem;
  border-radius: 14px;
  border: 1px solid var(--border);
  font-weight: 600;
  box-shadow: 0 10px 20px rgba(0,0,0,0.04);
  transition: transform 0.2s ease;
}

.feature-card:hover {
  transform: translateY(-4px);
}

