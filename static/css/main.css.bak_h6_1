  background: rgba(15, 18, 45, 0.65);
  backdrop-filter: blur(16px);
  border: 1px solid rgba(120,140,255,0.18);
  box-shadow:
    0 20px 60px rgba(0,0,0,0.5),
    0 0 40px rgba(120,140,255,0.15);
  transition: transform 0.3s ease, opacity 0.3s ease;
}

.topnav-inner {
  display: flex;
  align-items: center;
  gap: 18px;
}

.nav-logo {
  font-weight: 700;
  color: #f1f4ff;
  text-decoration: none;
  margin-right: 8px;
}

.nav-links a {
  color: rgba(210,215,255,0.85);
  text-decoration: none;
  padding: 6px 12px;
  border-radius: 999px;
  transition: all 0.2s ease;
  font-weight: 500;
}

.nav-links a:hover {
  background: rgba(120,140,255,0.15);
  color: #fff;
}

.nav-links a.active {
  background: rgba(120,140,255,0.25);
  color: #fff;
  box-shadow: 0 0 18px rgba(120,140,255,0.5);
}

/* Mobile */
@media (max-width: 700px) {
  .topnav-inner {
    flex-wrap: wrap;
    justify-content: center;
  }
}

