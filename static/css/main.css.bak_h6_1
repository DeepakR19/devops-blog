/* =========================
   H3 — FLOW & TRANSITIONS
   ========================= */

/* Section spacing rhythm */
.hero-dark {
  margin-bottom: 0;
  padding-bottom: 8rem;
}

.matte-section {
  padding-top: 10rem;
  padding-bottom: 10rem;
  position: relative;
}

/* Soft separator glow */
.matte-section::before {
  content: "";
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 70%;
  height: 1px;
  background: linear-gradient(
    to right,
    transparent,
    rgba(255,255,255,0.15),
    transparent
  );
}

/* Subtle fade-up animation */
@keyframes fadeUpSoft {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.features-title,
.features-subtitle,
.feature-card-dark {
  animation: fadeUpSoft 0.6s ease both;
}

/* Stagger effect */
.feature-card-dark:nth-child(1) { animation-delay: 0.05s; }
.feature-card-dark:nth-child(2) { animation-delay: 0.1s; }
.feature-card-dark:nth-child(3) { animation-delay: 0.15s; }
.feature-card-dark:nth-child(4) { animation-delay: 0.2s; }
.feature-card-dark:nth-child(5) { animation-delay: 0.25s; }
.feature-card-dark:nth-child(6) { animation-delay: 0.3s; }

/* Smooth scrolling */
html {
  scroll-behavior: smooth;
}


