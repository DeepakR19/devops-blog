  from {
    opacity: 0;
    transform: translateY(18px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Apply entrance */
.hero-glass,
.features-dark {
  animation: fadeUp 0.8s ease-out both;
}

/* Stagger cards */
.feature-card-dark {
  animation: floatSoft 6s ease-in-out infinite;
}

